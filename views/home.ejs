
    <head>
        <title><%= title %></title>
    </head>

     <section id="feed-posts">
         <h4>Posts</h4>
            <form action="/posts/create" id="new-post-form" method="POST">
                <textarea name="content" id="" cols="30" rows="3" placeholder="Type Here..."></textarea>
                <input type="submit" value="Post">
            </form>
     </section>

     <div id="viewPost">
            <% for (let post of posts) {%>
                <ul>
                    <p>
                    <li><%= post.content %>
                        <small>
                            <%= post.user.name %>
                        </small>
                    </li>
                </p>
                    
                </ul>
            <% } %>
        </div>